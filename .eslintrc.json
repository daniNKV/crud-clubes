{
    "extends": [
        "airbnb-base"
    ],

    "plugins": [
        "jest",
        "cypress"
    ],

    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "cypress/globals": true
    },

    "overrides": [],

    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },

    "rules": {
        "import/extensions": "off",
        "indent": ["error", 4]
    }
}
